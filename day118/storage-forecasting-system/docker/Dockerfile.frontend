FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the app
RUN npm run build

# Serve the app
FROM node:18-alpine
WORKDIR /app
RUN npm install -g serve
COPY --from=0 /app/build .
EXPOSE 3000
CMD ["serve", "-s", ".", "-l", "3000"]
